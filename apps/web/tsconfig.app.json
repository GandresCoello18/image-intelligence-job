{
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@image-intelligence-v2/shared": ["packages/shared/src/index.ts"],
      "@image-intelligence-v2/queue": ["packages/queue/src/index.ts"],
      "@image-intelligence-v2/storage": ["packages/storage/src/index.ts"]
    },
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"]
}

