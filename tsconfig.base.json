{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@image-intelligence-v2/shared": ["packages/shared/src/index.ts"],
      "@image-intelligence-v2/queue": ["packages/queue/src/index.ts"],
      "@image-intelligence-v2/storage": ["packages/storage/src/index.ts"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"]
  }
}
